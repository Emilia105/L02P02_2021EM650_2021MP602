<form asp-action="AgregarCliente">
    <div class="container-fluid py-5">
        <h1>Proceso de Venta</h1>
        <br />
        <h3>Datos del cliente</h3>
        <div class="row">
            <div class=" form-group row mb-4">
                <div class="col-sm-6">
                    @Html.Label("lblNombre", "Nombre")
                    @Html.TextBox("Nombre", "", new { @class = "form-control" })
                </div>
                <div class="col-sm-6">
                    @Html.Label("lblApellido", "Apellido")
                    @Html.TextBox("Apellido", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row mb-4">
                <div class="col-sm-12">
                    @Html.Label("lblEmail", "Email")
                    @Html.TextBox("Email", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row mb-4">
                <div class="col-sm-12">
                    @Html.Label("lblDireccion", "Direccion")
                    @Html.TextBox("Direccion", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row mb-4">
                <div class="col-sm-12">
                    <input type="submit" class="btn btn-success w-100" value="Iniciar Venta"></input>
                </div>
            </div>

           

        </div>
    </div>

</form>
